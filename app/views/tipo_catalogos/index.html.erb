<%content_for :titulo do%>
  TipoCatalogos
  
  
  
  
  <div class="input-group col-md-4 pull-right" style="margin-right: 20px;">
    <%= search_form_for @q do |f|%>
      <%= f.search_field :nome_cont,:class=>"form-control input-lg"%>
      <span class="input-group-btn">
        <%= button_tag(type: 'submit', class: "btn btn-info btn-lg") do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
      </span>
    </div>
  <%end%>
  <%= link_to "Criar",new_tipo_catalogo_path,:class=>"btn btn-primary"%>
<%end%>
<table class="table table-striped tabela-colapsavel">
  <thead>
    <tr>
      <th>nome</th>
      <th>ativo</th>
    </tr>
  </thead>
  <tbody>
    <% @tipo_catalogos.each_with_index do |t,i| %>
      <tr>
        <td><%= t.nome%></td>
        <td><%= t.ativo%></td>
        <td>
          <%= link_to "Editar", edit_tipo_catalogo_path(t),:class=>"btn btn-primary btn-xs"%>
          <%= link_to "Visualizar",tipo_catalogo_path(t),:class=>"btn btn-primary btn-xs"%>
          <%= link_to "Apagar", tipo_catalogo_path(t),:class=>"btn btn-danger btn-xs",:method=>:destroy,:'data-confirm'=>"Tem Certeza?"%>
        </td>
      </tr>
    <% end%>
  </tbody>
</table>
<%= paginate @tipo_catalogos%>